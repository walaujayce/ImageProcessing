<Window x:Class="ImageProcessing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessing"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <Border BorderBrush="Black" BorderThickness="2" Width="800" HorizontalAlignment="Center" Margin="0,99,0,0" Height="400" VerticalAlignment="Top">
            <Image x:Name="imagePicture" Stretch="Fill" ></Image>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Width="800" HorizontalAlignment="Center" Margin="0,99,0,0" Height="400" VerticalAlignment="Top">
            <Image x:Name="polygonPicture" Stretch="Fill"></Image>
        </Border>
        <Button Content="Open" Click="Button_Click" Width="200" Height="50" Margin="100,463,700,72" />
        <Button Content="Gray" Click="GrayButton_Click" Width="200" Height="50" Margin="400,468,400,67" />
        <Button Content="Polygon" Click="PolygonButton_Click" Width="200" Height="50" Margin="700,468,100,67"/>


    </Grid>
</Window>
